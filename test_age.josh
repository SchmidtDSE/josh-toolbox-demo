# Minimal test: does age.step work at all?

start unit count
end unit

start unit m
  alias meter
  alias meters
end unit

start simulation TestAge
  grid.size = 10 m
  grid.low = 0 m latitude, 0 m longitude
  grid.high = 50 m latitude, 50 m longitude
  steps.low = 0 count
  steps.high = 10 count
  exportFiles.patch = "file:///workspace/results/test_age_{replicate}.csv"
end simulation

start patch Default
  Thing.init = create Thing
  export.thingAge.step = sum(Thing.age)
end patch

start organism Thing
  age.init = 0 count
  age.step = age + 1 count
end organism
